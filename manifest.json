{
    "name": "pakku",
    "version": "1.0",
    "description": "The eternal danmaku devil on bilibili, now in your Chrome.",
    "icons": {
        "128": "assets/logo.png"
    },
    
    "manifest_version": 2,
    "minimum_chrome_version": "32",
    
    "permissions": [
        "*://*.bilibili.com/*",
        "webRequestBlocking",
        "webRequest",
        "notifications"
    ],
    
    "options_page": "options/options.html",
    "browser_action": {
        "default_icon": "assets/icon_display.png",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": ["background.js"]
    }
}